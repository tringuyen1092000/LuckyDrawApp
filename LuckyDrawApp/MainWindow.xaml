<Window x:Class="LuckyDrawApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LuckyDrawApp"
        mc:Ignorable="d"
        Title="MainWindow"
        Width="1792"
        Height="896"
        WindowState="Normal"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        KeyDown="Window_KeyDown"
    >
    <Window.Background>
        <ImageBrush ImageSource="./Images/LuckyDrawBG.jpg" Stretch="None"/>
    </Window.Background>
    <Window.Resources>
        <Style x:Key="DigitTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="/LuckyDrawApp;component/Fonts/UTM AptimaBold.ttf#UTM Aptima Bold" />
            <Setter Property="FontSize" Value="200" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Foreground" Value="#ecbc9b" />
            <Setter Property="Margin" Value="20 -50 20 0" />
        </Style>
    </Window.Resources>
    <Grid VerticalAlignment="Center"
          HorizontalAlignment="Center"
          ShowGridLines="False"
          >
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel
            Orientation="Horizontal"
            Grid.Row="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            >
            <Grid Margin="20">
                <Rectangle Stroke="#deb091" StrokeThickness="2" RadiusX="20" RadiusY="20" >
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="./Images/LuckyDrawBG.jpg" Stretch="UniformToFill"/>
                    </Rectangle.Fill>
                    <Rectangle.Effect>
                        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="10" BlurRadius="10" Opacity="0.5"/>
                    </Rectangle.Effect>
                </Rectangle>
                <TextBlock
                    Name="FirstDigitTxt"
                    Text="{Binding Path=FirstDigit}"
                    Style="{StaticResource DigitTextStyle}"
                        >
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#fbddc8" Direction="320" ShadowDepth="10" BlurRadius="10" Opacity="0.5"/>
                    </TextBlock.Effect>
                </TextBlock>
            </Grid>

            <Grid Margin="20">
                <Rectangle Stroke="#deb091" StrokeThickness="2" RadiusX="20" RadiusY="20" >
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="./Images/LuckyDrawBG.jpg" Stretch="UniformToFill"/>
                    </Rectangle.Fill>
                    <Rectangle.Effect>
                        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="10" BlurRadius="10" Opacity="0.5"/>
                    </Rectangle.Effect>
                </Rectangle>
                <TextBlock
                    Name="MidDigitTxt"
                    Text="{Binding Path=MidDigit}"
                    Style="{StaticResource DigitTextStyle}"
                    >
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#fbddc8" Direction="320" ShadowDepth="10" BlurRadius="10" Opacity="0.5"/>
                    </TextBlock.Effect>
                </TextBlock>
            </Grid>

            <Grid Margin="20">
                <Rectangle Stroke="#deb091" StrokeThickness="2" RadiusX="20" RadiusY="20" >
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="./Images/LuckyDrawBG.jpg" Stretch="UniformToFill"/>
                    </Rectangle.Fill>
                    <Rectangle.Effect>
                        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="10" BlurRadius="10" Opacity="0.5"/>
                    </Rectangle.Effect>
                </Rectangle>
                <TextBlock
                    Name="LastDigitTxt"
                    Text="{Binding Path=LastDigit}"
                    Style="{StaticResource DigitTextStyle}"
                        >
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#fbddc8" Direction="320" ShadowDepth="10" BlurRadius="10" Opacity="0.5"/>
                    </TextBlock.Effect>
                </TextBlock>
            </Grid>
        </StackPanel>
        <!--<Grid
            Grid.Row="0"
            VerticalAlignment="Center"
            Height="120"
            Margin="0,10,0,0"
            >
            <Button
                Width="180"
                Height="50"
                Content="START"
                Command="{Binding Path=StartCommand}"
                IsEnabled="{Binding Path=!IsSpinning}"
                >
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource BeautifulButton}" >
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Path=IsSpinning}" Value="False">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Path=IsSpinning}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>-->
    </Grid>
</Window>
