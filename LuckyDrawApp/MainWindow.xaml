<Window x:Class="LuckyDrawApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LuckyDrawApp"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="900"
        Width="1600"
        WindowState="Maximized"
        ResizeMode="NoResize"
        WindowStyle="None"
        >
    <Window.Background>
        <ImageBrush ImageSource="Images/LuckyDrawBG.png"></ImageBrush>
    </Window.Background>

    <Grid VerticalAlignment="Center"
          HorizontalAlignment="Center"
          ShowGridLines="False"
          Width="512"
          Height="896"
          >
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>

        <StackPanel
            Orientation="Horizontal"
            Grid.Row="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            >
            <Grid Margin="5" Width="110" Height="200">
                <Rectangle Stroke="Black" StrokeThickness="2" RadiusX="20" RadiusY="20" >
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="White" Offset="0"/>
                            <GradientStop Color="Gray" Offset="1"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                    <Rectangle.Effect>
                        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="10" BlurRadius="10" Opacity="0.5"/>
                    </Rectangle.Effect>
                </Rectangle>
                <TextBlock
                    Name="_firstDigitTxt"
                    Text="{Binding Path=FirstDigit}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="200"
                    Foreground="Red"
                    />
            </Grid>

            <Grid Margin="5" Width="110" Height="200">
                <Rectangle Stroke="Black" StrokeThickness="2" RadiusX="20" RadiusY="20" >
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="White" Offset="0"/>
                            <GradientStop Color="Gray" Offset="1"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                    <Rectangle.Effect>
                        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="10" BlurRadius="10" Opacity="0.5"/>
                    </Rectangle.Effect>
                </Rectangle>
                <TextBlock
                    Name="_midDigitTxt"
                    Text="{Binding Path=MidDigit}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="200"
                    Foreground="Red"/>
            </Grid>

            <Grid Margin="5" Width="110" Height="200">
                <Rectangle Stroke="Black" StrokeThickness="2" RadiusX="20" RadiusY="20" >
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="White" Offset="0"/>
                            <GradientStop Color="Gray" Offset="1"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                    <Rectangle.Effect>
                        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="10" BlurRadius="10" Opacity="0.5"/>
                    </Rectangle.Effect>
                </Rectangle>
                <TextBlock
                    Name="_lastDigitTxt"
                    Text="{Binding Path=LastDigit}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="200"
                    Foreground="Red"/>
            </Grid>
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Path=IsSpinning}" Value="True">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Path=IsSpinning}" Value="False">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>
        </StackPanel>
        <Button
            Grid.Row="0"
            Width="200"
            Height="50"
            Content="Start"
            Command="{Binding Path=StartCommand}"
            IsEnabled="{Binding Path=!IsSpinning}"
            >
            <Button.Style>
                <Style TargetType="Button" BasedOn="{StaticResource BeautifulButton}" >
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Path=IsSpinning}" Value="False">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Path=IsSpinning}" Value="True">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>
