<Window x:Class="LuckyDrawApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LuckyDrawApp"
        mc:Ignorable="d"
        Title="MainWindow"
        Width="1920"
        Height="1080"
        WindowState="Normal"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        KeyDown="Window_KeyDown"
    >
    <Window.Resources>
        <Style x:Key="DigitTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="/LuckyDrawApp;component/Fonts/LEXEND-SEMIBOLD.ttf#Lexend SemiBold" />
            <Setter Property="FontSize" Value="200" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Foreground" Value="#42e4f2" />
            <Setter Property="Margin" Value="0 -15 0 0" />
        </Style>
    </Window.Resources>
    <Grid VerticalAlignment="Center"
          HorizontalAlignment="Center"
          ShowGridLines="False"
          >
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel
            Orientation="Horizontal"
            Grid.Row="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            >
            <Grid Width="150">
                <TextBlock
                    Name="FirstDigitTxt"
                    Text="{Binding Path=FirstDigit}"
                    Style="{StaticResource DigitTextStyle}"
                    >
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#42e4f2" Direction="320" ShadowDepth="10" BlurRadius="10" Opacity="0.5"/>
                    </TextBlock.Effect>
                </TextBlock>
            </Grid>

            <Grid Margin="95 0" Width="150" >
                <TextBlock
                    Name="MidDigitTxt"
                    Text="{Binding Path=MidDigit}"
                    Style="{StaticResource DigitTextStyle}"
                    >
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#42e4f2" Direction="320" ShadowDepth="10" BlurRadius="10" Opacity="0.5"/>
                    </TextBlock.Effect>
                </TextBlock>
            </Grid>

            <Grid Width="150">
                <TextBlock
                    Name="LastDigitTxt"
                    Text="{Binding Path=LastDigit}"
                    Style="{StaticResource DigitTextStyle}"
                        >
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#42e4f2" Direction="320" ShadowDepth="10" BlurRadius="10" Opacity="0.5"/>
                    </TextBlock.Effect>
                </TextBlock>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
