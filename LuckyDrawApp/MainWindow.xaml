<Window x:Class="LuckyDrawApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LuckyDrawApp"
        mc:Ignorable="d"
        Title="MainWindow"
        Width="512"
        Height="896"
        WindowState="Normal"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        KeyDown="Window_KeyDown"
    >
    <Grid VerticalAlignment="Top"
          HorizontalAlignment="Center"
          Margin="5,70,0,0"
          ShowGridLines="False"
          >
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel
            Orientation="Horizontal"
            Grid.Row="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            >
            <Grid Margin="5" Width="50" Height="120">
                <!--<Rectangle Stroke="Black" StrokeThickness="2" RadiusX="20" RadiusY="20" >
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="White" Offset="0"/>
                            <GradientStop Color="Gray" Offset="1"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                    <Rectangle.Effect>
                        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="10" BlurRadius="10" Opacity="0.5"/>
                    </Rectangle.Effect>
                </Rectangle>-->
                <TextBlock
                    Name="FirstDigitTxt"
                    Text="{Binding Path=FirstDigit}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="100"
                    Foreground="Blue"
                    />
            </Grid>

            <Grid Margin="5" Width="50" Height="120">
                <!--<Rectangle Stroke="Black" StrokeThickness="2" RadiusX="20" RadiusY="20" >
